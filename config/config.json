{
  "distPath": "path:./dist",
  "react": {
    "rootId": "app",
    "rootComponentPath": "path:./src/components",
    "reducersPath": "path:./src/reducers",
    "serverRenderPath": "path:./src/middleware/renderReact"
  },
  "middleware": {
    "favicon": {
      "priority": 10,
      "module": {
        "name": "serve-favicon",
        "arguments": ["path:favicon.ico"]
      }
    },
    "static-dist": {
      "priority": 30,
      "module": {
        "name": "serve-static",
        "arguments": [
          "config:distPath"
        ]
      }
    },
    "render-react": {
      "priority": 200,
      "module": {
        "name": "config:react.serverRenderPath",
        "method": "default",
        "arguments": [
          "config:react.rootComponentPath",
          "config:react.rootId",
          "config:react.reducersPath"
        ]
      }
    }
  },
  "webpack": {
    "entry": {
      "client": "path:./src/client.js"
    },
    "devtool": "cheap-source-map",
    "stats": "normal",
    "output": {
      "path": "config:distPath",
      "filename": "[name].bundle.js"
    },
    "optimization": {
      "splitChunks": {
        "cacheGroups": {
          "commons": {
            "test": "regex:[\\/]node_modules[\\/]",
            "name": "vendor",
            "chunks": "all"
          }
        }
      }
    },
    "module": {
      "rules": [
        {
          "test": "regex:\\.jsx?$",
          "loader": "babel-loader"
        }
      ]
    },
    "plugins": {
      "env": {
        "module": {
          "name": "webpack",
          "method": "EnvironmentPlugin",
          "arguments": [
            {
              "NODE_ENV": "development",
              "ROOT_ID": "config:react.rootId",
              "ROOT_COMPONENT_PATH": "config:react.rootComponentPath",
              "REDUCERS_PATH": "config:react.reducersPath"
            }
          ]
        }
      }
    }
  }
}
